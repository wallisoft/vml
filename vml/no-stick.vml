# Main Content - TabControl
@TabControl MainTabs
Background=White
Margin=0
Parent=MainLayout

# ============================================
# QUICK TAB - Simple ISO selection & install
# ============================================
@TabItem TabQuick
Header=  Quick  
FontSize=14
Parent=MainTabs

@Grid QuickGrid
Margin=20
ColumnDefinitions=370,*
Parent=TabQuick

# Left Panel - ISO Selection
@StackPanel QuickLeftPanel
Grid.Column=0
Width=350
Padding=15
Background=#ecf0f1
Parent=QuickGrid

@TextBlock QuickTitle
Text=üìÄ Boot ISO Selection
FontSize=18
FontWeight=Bold
Foreground=#2c3e50
Margin=0,0,0,15
Parent=QuickLeftPanel

@Border MethodBorder
Background=White
BorderBrush=#bdc3c7
BorderThickness=1
CornerRadius=4
Padding=15
Margin=0,0,0,15
Parent=QuickLeftPanel

@StackPanel MethodPanel
Parent=MethodBorder

@TextBlock MethodLabel
Text=Select ISO Source:
FontSize=14
FontWeight=SemiBold
Margin=0,0,0,10
Parent=MethodPanel

@RadioButton RadioLocalFile
Content=üìÅ Browse Local File System
GroupName=IsoSource
IsChecked=true
Margin=0,0,0,10
Parent=MethodPanel

@RadioButton RadioDownload
Content=‚¨áÔ∏è Download from Repository
GroupName=IsoSource
Margin=0,0,0,0
Parent=MethodPanel

# Local File Section
@Border LocalFileBorder
Background=#e8f4f8
BorderBrush=#3498db
BorderThickness=1
CornerRadius=4
Padding=10
Margin=0,0,0,15
Parent=QuickLeftPanel

@StackPanel LocalFilePanel
Parent=LocalFileBorder

@TextBlock LocalFileLabel
Text=ISO File Path:
FontSize=12
Margin=0,0,0,5
Parent=LocalFilePanel

@TextBox txtIsoPath
Watermark=/path/to/your/file.iso
Width=310
Height=32
Margin=0,0,0,8
Parent=LocalFilePanel

@Button btnBrowse
Content=üîç Browse...
Width=150
Height=35
Background=#3498db
Foreground=White
CornerRadius=4
HorizontalAlignment=Left
Parent=LocalFilePanel

# Download List Section
@Border DownloadBorder
Background=White
BorderBrush=#bdc3c7
BorderThickness=1
CornerRadius=4
Padding=10
Parent=QuickLeftPanel

@StackPanel DownloadPanel
Parent=DownloadBorder

@TextBlock DownloadLabel
Text=üì• Popular ISOs (Community Curated):
FontSize=12
FontWeight=SemiBold
Margin=0,0,0,8
Parent=DownloadPanel

@ListBox lstIsoDownloads
Height=200
Background=White
BorderBrush=#bdc3c7
BorderThickness=1
Parent=DownloadPanel

# Right Panel - Actions & Status
@StackPanel QuickRightPanel
Grid.Column=1
Padding=20
Parent=QuickGrid

@TextBlock StatusTitle
Text=üöÄ Installation Status
FontSize=18
FontWeight=Bold
Foreground=#2c3e50
Margin=0,0,0,15
Parent=QuickRightPanel

@Border StatusBorder
Background=White
BorderBrush=#bdc3c7
BorderThickness=2
CornerRadius=8
Padding=20
Margin=0,0,0,20
Parent=QuickRightPanel

@StackPanel StatusPanel
Parent=StatusBorder

@TextBlock StatusText
Text=Ready to configure boot options
FontSize=14
Foreground=#7f8c8d
TextWrapping=Wrap
Margin=0,0,0,15
Parent=StatusPanel

@TextBlock SwapInfoText
Text=Swap Space: Not configured
FontSize=12
Foreground=#e67e22
Margin=0,0,0,5
Parent=StatusPanel

@TextBlock IsoInfoText
Text=Boot ISOs: 0 configured
FontSize=12
Foreground=#e67e22
Margin=0,0,0,5
Parent=StatusPanel

@TextBlock GrubInfoText
Text=GRUB2: Not configured
FontSize=12
Foreground=#e67e22
Margin=0,0,0,0
Parent=StatusPanel

# Action Buttons
@StackPanel ActionPanel
Margin=0,20,0,0
Parent=QuickRightPanel

@Button btnDownloadInstall
Content=‚¨áÔ∏è Download & Install
Width=350
Height=45
Background=#27ae60
Foreground=White
FontSize=16
FontWeight=Bold
CornerRadius=6
Margin=0,0,0,10
Parent=ActionPanel

@Button btnInstallLocal
Content=üíæ Install Local ISO
Width=350
Height=45
Background=#2980b9
Foreground=White
FontSize=16
FontWeight=Bold
CornerRadius=6
Margin=0,0,0,10
Parent=ActionPanel

@Button btnManageBoot
Content=‚öôÔ∏è Manage Boot Options
Width=350
Height=35
Background=#7f8c8d
Foreground=White
CornerRadius=4
Parent=ActionPanel

# Progress Section
@Border ProgressBorder
Background=#ecf0f1
BorderBrush=#95a5a6
BorderThickness=1
CornerRadius=4
Padding=15
Margin=0,20,0,0
Parent=QuickRightPanel

@StackPanel ProgressPanel
Parent=ProgressBorder

@TextBlock ProgressLabel
Text=Operation Progress:
FontSize=12
FontWeight=SemiBold
Margin=0,0,0,8
Parent=ProgressPanel

@ProgressBar pbOperation
Height=20
Minimum=0
Maximum=100
Value=0
Parent=ProgressPanel

@TextBlock ProgressText
Text=Waiting for operation...
FontSize=11
Foreground=#7f8c8d
Margin=0,8,0,0
Parent=ProgressPanel

