# Right Panel - GRUB2 Configuration
@StackPanel AdvancedRightPanel
Grid.Column=1
Padding=20
Parent=AdvancedGrid

@TextBlock GrubTitle
Text=‚ö° GRUB2 Configuration
FontSize=18
FontWeight=Bold
Foreground=#2c3e50
Margin=0,0,0,15
Parent=AdvancedRightPanel

@Border GrubBorder
Background=White
BorderBrush=#2c3e50
BorderThickness=2
CornerRadius=4
Padding=15
Parent=AdvancedRightPanel

@StackPanel GrubPanel
Parent=GrubBorder

@TextBlock GrubEditorLabel
Text=GRUB Configuration Editor:
FontSize=12
FontWeight=SemiBold
Margin=0,0,0,8
Parent=GrubPanel

@TextBox txtGrubConfig
AcceptsReturn=true
TextWrapping=Wrap
Height=300
FontFamily=Courier New
FontSize=11
Background=#282c34
Foreground=#abb2bf
Padding=10
Text=# GRUB2 Configuration\n# Auto-generated by No-Stick Boot Manager\n\nGRUB_DEFAULT=0\nGRUB_TIMEOUT=10\nGRUB_DISTRIBUTOR=`lsb_release -i -s 2> /dev/null || echo Debian`\nGRUB_CMDLINE_LINUX_DEFAULT="quiet splash"\nGRUB_CMDLINE_LINUX=""\n\n# No-Stick Boot Entry\nmenuentry "No-Stick Boot Menu" {\n    set root=(hd0,1)\n    chainloader +1\n}
Parent=GrubPanel

@StackPanel GrubButtonPanel
Orientation=Horizontal
Margin=0,15,0,0
Parent=GrubPanel

@Button btnGrubDefaults
Content=‚Ü∫ Reset to Defaults
Width=140
Height=35
Background=#95a5a6
Foreground=White
CornerRadius=4
Margin=0,0,10,0
Parent=GrubButtonPanel

@Button btnGrubSave
Content=üíæ Save Configuration
Width=140
Height=35
Background=#27ae60
Foreground=White
CornerRadius=4
Parent=GrubButtonPanel

@TextBlock GrubWarning
Text=‚ö†Ô∏è Warning: Incorrect GRUB configuration can make your system unbootable. Create a backup before modifying.
FontSize=11
Foreground=#e74c3c
TextWrapping=Wrap
Margin=0,15,0,0
Parent=AdvancedRightPanel

