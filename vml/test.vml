@Window CounterWindow
Title=Counter Demo
Width=300
Height=200
Background=#e8f5e9

@StackPanel Main
Parent=CounterWindow
Margin=20
Spacing=15
HorizontalAlignment=Center
VerticalAlignment=Center

@TextBlock CountDisplay
Parent=Main
Text=Count: 0
FontSize=32
FontWeight=Bold
Foreground=#107C10
HorizontalAlignment=Center

@Button IncrementBtn
Parent=Main
Content=Click Me!
Width=150
Height=40
Background=#107C10
Foreground=White
FontSize=16
OnClick=CounterScript

@Button ResetBtn
Parent=Main
Content=Reset
Width=150
Height=40
Background=#424242
Foreground=White
OnClick=ResetScript

@Script CounterScript
Interpreter=lua
Instance=mycounter
-- Persistent counter using named instance
if count == nil then
    count = 0
end
count = count + 1
Vml("SetProperty", "CountDisplay", "Text", "Count: " .. count)

@Script ResetScript
Interpreter=lua
Instance=mycounter
count = 0
Vml("SetProperty", "CountDisplay", "Text", "Count: 0")
