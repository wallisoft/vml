@Window CSharpCounterWindow
Title=C# Counter Demo
Width=300
Height=200
Background=#e8f5e9

@StackPanel Main
Parent=CSharpCounterWindow
Margin=20
Spacing=15
HorizontalAlignment=Center
VerticalAlignment=Center

@TextBlock CountDisplay
Parent=Main
Text=Count: 0
FontSize=32
FontWeight=Bold
Foreground=#0066cc
HorizontalAlignment=Center

@Button IncrementBtn
Parent=Main
Content=Increment (C#)
Width=150
Height=40
Background=#0066cc
Foreground=White
FontSize=16
OnClick=CSharpCounterScript

@Button ResetBtn
Parent=Main
Content=Reset
Width=150
Height=40
Background=#424242
Foreground=White
OnClick=CSharpResetScript

@Script CSharpCounterScript
Interpreter=csharp
Instance=csharpCounter
// Try to increment, catch if doesn't exist yet
try
{
    count++;
}
catch
{
    int count = 1;
}
Vml("SetProperty", "CountDisplay", "Text", $"Count: {count}");
Vml("SetProperty", "CountDisplay", "Text", $"Count: {count}");
Console.WriteLine($"C# Count: {count}");

@Script CSharpResetScript
Interpreter=csharp
Instance=csharpCounter
int count = 0;
Vml("SetProperty", "CountDisplay", "Text", "Count: 0");
Console.WriteLine("C# Reset");
